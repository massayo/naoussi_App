<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.alogient.aseq.mobileclaim"
	versionCode="10"
	version   = "2.1.0">

	<!-- versionCode is optional and Android only -->

	<name>ihaveaplan</name>

	<description>
		description - com.alogient.aseq.mobileclaim
	</description>

	<author href="http://www.alogient.com" email="support@alogient.com">
		Alogient
	</author>

	<preference name="phonegap-version" value="3.5.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="false" />
	<preference name="prerendered-icon" value="false" />
	<preference name="stay-in-webview" value="false" />
  	<preference name="target-device" value="handset" />
  	<preference name="show-splash-screen-spinner" value="true" />
  	<preference name="EnableViewportScale" value="false" />
  	<preference name="ios-statusbarstyle" value="black-opaque" />
  	<preference name="LoadUrlTimeoutValue" value="10000"/>
  	  
  <!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
  <preference name="permissions" value="none"/>
 
  <icon src="www/icon.png" />
	<icon src="www/icons/ios/apple-touch-icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="www/icons/ios/apple-touch-icon-72x72.png" gap:platform="ios" width="72" height="72" />
	<icon src="www/icons/ios/apple-touch-icon-114x114.png" gap:platform="ios" width="114" height="114" />
	<icon src="www/icons/ios/apple-touch-icon-120x120.png" gap:platform="ios" width="120" height="120" />
	<gap:splash src="www/splash/ios/AseqSplash320.png" width="320" height="480" />
	<gap:splash src="www/splash/ios/AseqSplash640.png" width="640" height="960" />
	<gap:splash src="www/splash/ios/640X1136.png" gap:platform="ios" width="640" height="1136" />
	<!--gap:splash src="splash/ios/Default-Landscape.png" width="1024" height="768" /-->
	<!--gap:splash src="splash/ios/Default-Portrait.png" width="768" height="1024" /-->
	<gap:platform name="ios" />
	<!-- to enable individual permissions use the following examples -->
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<!-- feature name="http://api.phonegap.com/1.0/geolocation"/ -->
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	<feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
  	<plugin name="File" value="CDVFile" /> 
  <!-- gap:plugin name="org.apache.cordova.file" /-->
  	<plugin name="FileTransfer" value="CDVFileTransfer" />
  <!-- gap:plugin name="org.apache.cordova.file-transfer" /-->
    <plugin name="Capture" value="CDVCapture" />
    <plugin name="Camera" value="CDVCamera" />
  <!-- gap:plugin name="org.apache.cordova.camera" /-->

  <!-- A blank access tag - <access /> - denies access to any external resources. A wildcard - <access origin="*" /> - allows access to any external resource. Otherwise, you can specify allowed domains individually -->
	<access origin="*" />
</widget>